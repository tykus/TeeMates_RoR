<%= form_for @competition, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :competition_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :competition_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
      <%=  f.collection_select(:course_id, @courses, :id, :name, {:include_blank => 'Select Course'}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :css, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :css, :class => 'number_field', :value => 72 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                competitions_path, :class => 'btn' %>
  </div>
<% end %>
