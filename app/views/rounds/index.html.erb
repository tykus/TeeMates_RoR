<div class="container">
  <div class="row">
    <div class="span2">
      <%= image_tag current_user.avatar.url, :class => 'img-polaroid' %>
    </div>

    <div class="span10">

      <h2 class="pull-left">My Rounds</h2>
      <%= link_to "New Round", new_round_path, :class => "btn btn-primary pull-right" %>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Date Played</th>
          <th colspan="2">Course</th>
          <th>Tee</th>
          <th>Strokes</th>
          <th>Stableford</th>
          <th>Handicap</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @rounds.each do |round| %>
            <tr>
              <td><%= round.date_played %></td>
              <td><%= image_tag round.course.crest, :class => "img img-polaroid", :size => "50x50" %></td>
              <td><%= round.course.name %></td>
              <td>
                <span class="label <%= label_color(round.tee) %>">
                  <%= round.tee.capitalize %>
                </span>
              </td>
              <td><%= round.total_strokes %></td>
              <td><%= round.total_score %></td>
              <td><%= hcp_to_i(round.user.handicaps.last) %></td>
              <td>
                <div class="btn-group btn-group-vertical">
                  <%= link_to "Details", round_path(round), :class => "btn" %>
                  <%= link_to "Edit", rounds_path, :class => "btn" %>
                  <%= link_to "Delete", rounds_path, :class => "btn btn-danger" %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <%= will_paginate @rounds %>
    </div>
  </div>
</div>
