<h1>Edit User</h1>

<div class="row">
  <div class="span4">
    <% if @user.avatar.exists? %>
        <%= image_tag @user.avatar.url(:thumb), :class => "img-polaroid center" %>
    <% else %>
        <%= image_tag 'user.png', :class => 'img-polaroid center', :size => '100x100' %>  <!-- displaying the default user image -->
    <% end %>
    <h3><%=  @user.fullname %></h3>
  </div>

  <div class="span8">
    <h3>Edit Details</h3>
    <%= render 'form' %>
  </div>
</div>